<script>
    // IntersectionObserver for sections and videos
    const sections = document.querySelectorAll('section');
    const statsElements = document.querySelectorAll('.stat');
    const highlightVideos = document.querySelectorAll('.highlight video');

    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if(entry.isIntersecting){
                entry.target.classList.add('visible');

                // Animate stats
                const statElem = entry.target.querySelector('h3');
                if(statElem){
                    const targetValue = parseInt(entry.target.parentElement.dataset.target || statElem.parentElement.dataset.target);
                    if(!statElem.dataset.animated){
                        let current = 0;
                        let step = Math.ceil(targetValue / 200);
                        const interval = setInterval(()=>{
                            current += step;
                            if(current >= targetValue){
                                current = targetValue;
                                clearInterval(interval);
                            }
                            statElem.textContent = current.toLocaleString();
                            statElem.style.transform='scale(1.3)';
                            setTimeout(()=>statElem.style.transform='scale(1)',100);
                        },20);
                        statElem.dataset.animated = true;
                    }
                }

                // Play video
                const video = entry.target.querySelector('video');
                if(video){ 
                    video.play(); 
                    // Increase points while video plays
                    video.addEventListener('timeupdate', ()=>{
                        const pointsElem = document.querySelector('.stat[data-id="points"] h3');
                        let current = parseInt(pointsElem.textContent.replace(/,/g,''));
                        current += 1; // Add 1 point per video frame update
                        pointsElem.textContent = current.toLocaleString();
                    });
                }
            }
        });
    }, {threshold:0.5});

    sections.forEach(sec=>observer.observe(sec));
    statsElements.forEach(stat=>observer.observe(stat));
    highlightVideos.forEach(video=>observer.observe(video));

    // Auto increment small stats over time
    setInterval(()=>{
        const allStats = [
            {id:'points', increment:5},
            {id:'seasons', increment:0},
            {id:'championships', increment:0},
            {id:'allstar', increment:0}
        ];
        allStats.forEach(stat=>{
            const elem = document.querySelector(`.stat[data-id="${stat.id}"] h3`);
            let current = parseInt(elem.textContent.replace(/,/g,''));
            current += stat.increment;
            elem.textContent = current.toLocaleString();
            elem.style.transform='scale(1.2)';
            setTimeout(()=>elem.style.transform='scale(1)',100);
        });
    }, 2000);
</script>

